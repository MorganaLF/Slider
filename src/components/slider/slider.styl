.slider
  &.ui-slider
    height: rem(5px)
    background-color light-grey
    border: none
  .ui-slider-handle
    top: rem(-7.5px)
    width: rem(20px)
    height: rem(20px)
    border-radius: 50%
    background: primary-color
    border none
    cursor: pointer
  &_progress-bg_secondary .ui-slider-range
  &_progress-bg_secondary .ui-slider-handle
    background: secondary-color
  &__scale
    list-style-type none
    display: flex
    justify-content: space-between
    margin-top: rem(10px)
    font-size rem(11px)
    font-weight: 900
    letter-spacing rem(0.55px)
    color light-grey-text
  &__tip
    position: absolute
    top: rem(-31px)
    left: rem(-8px)
    width rem(35px)
    padding: rem(5px) 0 rem(5px)
    border-radius: 5px
    font-weight: 900
    font-size rem(13px)
    text-align: center
    letter-spacing rem(0.65px)
    font-family: Lato
    color #fff
    background: primary-color
    cursor: pointer
    &:after
      content: ''
      position: absolute
      bottom: rem(-4px)
      left: rem(14px)
      width: rem(7px)
      height: rem(7px)
      transform rotate(45deg)
      background: primary-color





