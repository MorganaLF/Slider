@import '../../styles/variables.styl'

.tick-box
  display inline-block
  width rem(24px)
  height rem(24px)
  border-radius 50%
  overflow hidden
  cursor pointer

  &__input
    display none

    &:checked + .tick-box__round
      background-color secondary-color
      background-image url('images/check-white.svg')

  &__round
    content ''
    display inline-block
    width 100%
    height 100%
    background light-grey url('images/check-grey.svg') no-repeat center
    background-size 60%
    transition .4s